<Window x:Class="AutoClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoClicker" Height="300" Width="400"
        Focusable="True">
    <StackPanel Margin="20">
        <TextBlock Text="Clicks Per Second:"/>
        <TextBox x:Name="CpsBox" Text="10"/>
        
        <TextBlock Text="Key to Press:" Margin="0,10,0,0"/>
        <TextBox x:Name="KeyBox" Text="Click here and press any key" 
                 IsReadOnly="True" Background="LightGray" 
                 PreviewKeyDown="KeyBox_PreviewKeyDown"/>
        
        <CheckBox x:Name="MouseClickBox" Content="Include Left Click" Margin="0,10,0,0" IsChecked="True"/>
        
        <Button x:Name="StartBtn" Content="Start" Click="StartBtn_Click" Margin="0,20,0,0" Height="30"/>
        <Button x:Name="StopBtn" Content="Stop" Click="StopBtn_Click" Margin="0,5,0,0" Height="30" IsEnabled="False"/>
        
        <TextBlock x:Name="StatusText" Text="Press F6 to stop" Margin="0,20,0,0" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
