<Window x:Class="AutoClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoClicker" Height="350" Width="450"
        KeyDown="Window_KeyDown" Focusable="True">
    <StackPanel Margin="20">
        <TextBlock Text="Duration:"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="DurationBox" Text="10" Width="50"/>
            <ComboBox x:Name="TimeUnitBox" SelectedIndex="0" Width="80" Margin="10,0,0,0">
                <ComboBoxItem Content="Seconds"/>
                <ComboBoxItem Content="Milliseconds"/>
                <ComboBoxItem Content="Minutes"/>
            </ComboBox>
        </StackPanel>
        
        <TextBlock Text="Click Interval (ms):" Margin="0,10,0,0"/>
        <TextBox x:Name="IntervalBox" Text="1000"/>
        
        <TextBlock Text="Key to Press:" Margin="0,10,0,0"/>
        <TextBox x:Name="KeyBox" Text="Click here and press any key" 
                 IsReadOnly="True" Background="LightGray" 
                 PreviewKeyDown="KeyBox_PreviewKeyDown"/>
        
        <CheckBox x:Name="MouseClickBox" Content="Include Left Click" Margin="0,10,0,0" IsChecked="True"/>
        
        <Button x:Name="StartBtn" Content="Start" Click="StartBtn_Click" Margin="0,20,0,0" Height="30"/>
        <Button x:Name="StopBtn" Content="Stop" Click="StopBtn_Click" Margin="0,5,0,0" Height="30" IsEnabled="False"/>
        
        <TextBlock x:Name="StatusText" Text="Press F6 to toggle start/stop" Margin="0,20,0,0" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
